{
	"compilerOptions": {
		"incremental": true,
		"composite": true,
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ESNext"],
		"types": ["node"],
		"outDir": "lib/esm",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"paths": {
			"#lib": ["./src/index.ts"]
		},
		"checkJs": true,
		"allowJs": true
	}
}
