{
	"compilerOptions": {
		/* Type Checking */
		"alwaysStrict": true,
		"noImplicitOverride": true,
		"strict": true,
		"useUnknownInCatchVariables": false,

		/* Modules */
		"module": "CommonJS",
		"moduleResolution": "Node",

		/* Emit */
		"declaration": true,
		"declarationMap": true,
		"newLine": "lf",
		"outDir": "lib",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"stripInternal": true,

		/* Language and Environment */
		"target": "ES2022",
		"useDefineForClassFields": false,

		/* Interop Constraints */
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		/* Output Formatting */
		"noErrorTruncation": true
	},
	"include": ["./src"]
}
